FROM openjdk:11-slim

LABEL author="korov" email="korov9@163.com" date="2020-09-13"

ENV APP_HOME /app

RUN mkdir $APP_HOME

WORKDIR $APP_HOME

COPY libs/kafka-consumer*.jar /app.jar

RUN bash -c 'touch /app.jar'
EXPOSE 8080

ENTRYPOINT ["java", "-Djava.security.egd=file:/dev/./urandom", "-Dspring.profiles.active=test", "-jar", "/app.jar" ]